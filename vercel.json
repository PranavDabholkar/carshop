{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "cd frontend && npm run build",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "^/(.*)$",
      "destination": "/frontend/dist/index.html"
    }
  ]
}
