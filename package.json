{
  "name": "carshop-monorepo",
  "version": "1.0.0",
  "description": "Car Shop Management System - Monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd api && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "cd api && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd api && npm install && cd ../frontend && npm install",
    "db:setup": "cd api && npm run db:setup",
    "db:migrate": "cd api && npm run db:migrate",
    "db:seed": "cd api && npm run db:seed",
    "lint": "npm run lint:api && npm run lint:frontend",
    "lint:api": "cd api && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "npm run format:api && npm run format:frontend",
    "format:api": "cd api && npm run format",
    "format:frontend": "cd frontend && npm run format",
    "test": "npm run test:api && npm run test:frontend",
    "test:api": "cd api && npm test",
    "test:frontend": "cd frontend && npm test"
  },
  "keywords": [
    "car-shop",
    "automotive",
    "management",
    "react",
    "nodejs",
    "typescript",
    "monorepo"
  ],
  "author": "Car Shop Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
} 